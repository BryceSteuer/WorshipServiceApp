<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:backgroundTint="@color/blue_shade_2"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/idLL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <TextView
                android:id="@+id/TVFirstHymnName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:text="1st Hymn Name"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/TVFirstHymnNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:text="1st Hymn #"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/TVPsalmNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="Psalm #"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/idLL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_below="@id/idLL1">
            <TextView
                android:id="@+id/TVSecondHymnName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="2nd Hymn Name"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/TVSecondHymnNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="2nd Hymn #"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/idLL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_below="@id/idLL3">

            <ImageView
                android:id="@+id/idTVDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="0.5"
                android:padding="4dp"
                android:src="@drawable/ic_delete"
                android:tooltipText="Delete this service"
                app:tint="@color/white" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>